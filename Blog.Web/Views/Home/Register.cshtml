
@{
    ViewData["Title"] = "Register";
}

@model RegisterViewModel

  <div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card border-0 shadow rounded-3 my-5">
          <div class="card-body p-4 p-sm-5">
            <h5 class="card-title text-center mb-5 fw-light fs-5">Kayıt Ol</h5>
            <form asp-controller="Home" asp-action="Register" method="post">

                 <div class="form-floating mb-3">
                <input type="text" class="form-control" asp-for="UserName">
                <label asp-for="UserName">Kullanıcı Adınız</label>
              </div>
              <div class="form-floating mb-3">
                <input type="email" class="form-control" asp-for="Email">
                <label asp-for="Email">Email Adresiniz</label>
              </div>
              <div class="form-floating mb-3">
                <input type="password" class="form-control" asp-for="Password">
                <label  asp-for="Password">Şifreniz</label>
              </div>

              <div class="d-grid">
                <button class="btn btn-success " type="submit">Kayıt Ol</button>
              </div>


            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

